<Window x:Class="Sports_Coaches.ScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sports_Coaches"
        mc:Ignorable="d"
        Title="Schedule" Height="500" Width="300"
        Icon="Images\logo.jpg"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="mainGrid" Grid.Row="0"
              PreviewMouseLeftButtonDown="OnPreviewMouseLeftButtonDown" />
        <StackPanel Grid.Row="1">
            <Button Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    Click="Button_Click">
                Выбрать
            </Button>
        </StackPanel>
    </Grid>
</Window>
