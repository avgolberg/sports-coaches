<Window x:Class="Sports_Coaches.AddCoach"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Sports_Coaches"
        mc:Ignorable="d"
        Title="Add new coach" MinHeight="500" MinWidth="950"
        Height="500"
        Width="1000"
        MaxHeight="550"
        MaxWidth="1200"
        WindowStartupLocation="CenterScreen"
        Icon="Images/logo.jpg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"></ColumnDefinition>
            <ColumnDefinition Width="1.2*"></ColumnDefinition>
            <ColumnDefinition Width="1.2*"></ColumnDefinition>
            <ColumnDefinition Width="1.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" 
                    Margin="10">
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Ім'я та по-батькові *"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10"
                     TextWrapping="Wrap" />
            <Image Name="coachImage"
                   Height="100"
                   Width="100"
                   Source="Images/no-image.png"
                   Margin="10"
                   Cursor="Hand"
                   PreviewMouseLeftButtonDown="coachImage_PreviewMouseLeftButtonDown" />

            <TextBlock Text="Стать *" Margin="10 10 10 5" FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Margin="10"
                             Style="{StaticResource MaterialDesignRadioButton}">
                Чоловік
                </RadioButton>
                <RadioButton Margin="10"
                             Style="{StaticResource MaterialDesignRadioButton}">
                Жінка
                </RadioButton>
            </StackPanel>
            <DatePicker materialDesign:HintAssist.Hint="Дата народження *"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        Margin="10"
                        FontSize="14" />
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Email"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10"
                     TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Margin="10">
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Номер телефону *"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10"
                     TextWrapping="Wrap" />
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Номер телефону (2)"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10"
                     TextWrapping="Wrap" />
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Номер телефону (3)"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10"
                     TextWrapping="Wrap" />
            
            <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Мови"
                           FontSize="14"
                           Margin="10" />
                <ListBox Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBox}"
                         Name="languagesLB">
                </ListBox>
            </StackPanel>
            </ScrollViewer>
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 20"
                    FontSize="14"
                    Content="Додати мову" />
        </StackPanel>
        <StackPanel Grid.Column="2"
                    Margin="10">
            <ComboBox Name="sportCB"
                      materialDesign:HintAssist.Hint="Вид спорту *"
                      Margin="10"
                      IsEditable="True">               
            </ComboBox>
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 20"
                    FontSize="14"
                    Content="Додати спорт" />
            <ComboBox Name="rankCB"
                      materialDesign:HintAssist.Hint="Розряд"
                      Margin="10"
                      IsEditable="True">
            </ComboBox>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Досвід *"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Margin="10" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати дані про освіту" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати пройдені курси" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати сертифікати" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати досягнення" />
        </StackPanel>
        <StackPanel Grid.Column="3"
                    Margin="10">
            <ComboBox Name="cityCB"
                      materialDesign:HintAssist.Hint="Місто *"
                      Margin="10"
                      IsEditable="True" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 20"
                    FontSize="14"
                    Content="Додати місто" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати місце роботи" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати тренування"
                    />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10 5 10 5"
                    FontSize="14"
                    Content="Додати виїзні тренування" />
        </StackPanel>
        <Button Grid.ColumnSpan="4" Grid.Row="1"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="10"
                Content="Зберегти" />
    </Grid>
</Window>
